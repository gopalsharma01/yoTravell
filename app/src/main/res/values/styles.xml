<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="CustomInput">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:background">@color/colorTransparentWhite</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomInnerInput">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:background">@color/colorTransparentBlack</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="subTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="CustomBtn">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorTransparentBtnRed</item>
    </style>

    <style name="Hyperlink">
        <item name="android:background">#fff</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

</resources>
